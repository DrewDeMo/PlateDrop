    "dotenv": "^16.4.5",
    "gray-matter": "^4.0.3",
    "lucide-astro": "^0.545.0",
    "marked": "^16.4.0",
    "node-fetch": "^3.3.2",
    "openai": "^4.58.1",
    "sharp": "^0.33.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "@types/node": "^20.16.5",
    "eslint": "^8.57.0",
    "eslint-plugin-astro": "^1.2.3",
