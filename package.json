{
  "name": "platedrop",
  "version": "1.0.0",
  "description": "Automated home gym deals and guides platform",
  "type": "module",
  "private": true,
  "workspaces": [
    "site"
  ],
  "scripts": {
    "dev": "npm run dev --workspace site",
    "start": "npm run dev --workspace site",
    "build": "npm run build --workspace site",
    "preview": "npm run preview --workspace site",
    "astro": "npm exec --workspace site astro",
    "fetch": "node scripts/fetch/index.js",
    "generate:daily": "node scripts/generate/daily-deals.js",
    "generate:guide": "node scripts/generate/evergreen-guide.js",
    "validate": "node scripts/validate/index.js",
    "test": "node --test tests/**/*.test.js",
    "lint": "eslint . --ext .js,.astro",
    "format": "prettier --write \"**/*.{js,astro,md,json}\""
  },
  "dependencies": {
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.5",
    "node-fetch": "^3.3.2",
    "openai": "^4.58.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.16.5",
    "eslint": "^8.57.0",
    "eslint-plugin-astro": "^1.2.3",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "home-gym",
    "fitness",
    "deals",
    "equipment",
    "astro",
    "static-site"
  ],
  "author": "PlateDrop",
  "license": "MIT"
}
