---
import BaseLayout from '../layouts/BaseLayout.astro';
import { readFileSync } from 'fs';
import { join } from 'path';
import { marked } from 'marked';

const markdownPath = join(process.cwd(), '../content/pages/affiliate-disclosure.md');
const markdownContent = readFileSync(markdownPath, 'utf-8');

// Extract frontmatter and content
const frontmatterRegex = /^---\n([\s\S]*?)\n---\n([\s\S]*)$/;
const match = markdownContent.match(frontmatterRegex);

let title = 'Affiliate Disclosure';
let description = 'PlateDrop affiliate disclosure and commission information';
let content = markdownContent;

if (match) {
  const frontmatter = match[1];
  content = match[2];
  
  const titleMatch = frontmatter.match(/title:\s*"([^"]*)"/);
  const descMatch = frontmatter.match(/description:\s*"([^"]*)"/);
  
  if (titleMatch) title = titleMatch[1];
  if (descMatch) description = descMatch[1];
}

const htmlContent = marked(content);
---

<BaseLayout title={title} description={description}>
  <div class="py-16 md:py-8 min-h-[60vh]">
    <div class="container">
      <article class="legal-content max-w-[800px] mx-auto glass p-12 md:p-6 rounded-2xl" set:html={htmlContent} />
    </div>
  </div>
</BaseLayout>

<style>
  .legal-content :global(h1) {
    @apply text-4xl md:text-3xl font-extrabold mb-6;
    background: linear-gradient(135deg, var(--color-text) 0%, var(--color-primary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .legal-content :global(h2) {
    @apply text-2xl font-bold mt-8 mb-4 text-text;
  }

  .legal-content :global(h3) {
    @apply text-xl font-semibold mt-6 mb-3 text-text;
  }

  .legal-content :global(p) {
    @apply mb-4 leading-relaxed text-text-secondary;
  }

  .legal-content :global(ul),
  .legal-content :global(ol) {
    @apply mb-4 pl-6 text-text-secondary;
  }

  .legal-content :global(li) {
    @apply mb-2 leading-relaxed;
  }

  .legal-content :global(a) {
    @apply text-primary underline hover:text-secondary;
  }

  .legal-content :global(strong) {
    @apply text-text font-semibold;
  }

  .legal-content :global(hr) {
    @apply border-0 border-t border-glass-border my-8;
  }
</style>
