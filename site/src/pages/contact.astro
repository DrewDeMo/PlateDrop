
---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Contact Us - PlateDrop" 
  description="Get in touch with the PlateDrop team. Questions, feedback, or partnership inquiries welcome."
>
  <div class="contact-page">
    <!-- Hero Section -->
    <section class="contact-hero">
      <div class="container">
        <div class="hero-content animate-fade-in">
          <h1 class="hero-title">Let's Connect</h1>
          <p class="hero-subtitle">We're here to help you build your dream home gym</p>
        </div>
      </div>
    </section>

    <!-- Contact Methods Grid -->
    <section class="contact-methods">
      <div class="container">
        <div class="methods-grid">
          <!-- General Inquiries -->
          <div class="contact-card glass animate-slide-in" style="animation-delay: 0.1s">
            <div class="card-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
            </div>
            <h3>General Inquiries</h3>
            <p>Questions about deals or equipment?</p>
            <a href="mailto:hello@platedrop.fit" class="contact-link">
              hello@platedrop.fit
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="7" y1="17" x2="17" y2="7"></line>
                <polyline points="7 7 17 7 17 17"></polyline>
              </svg>
            </a>
            <div class="response-time">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
              Response within 24-48 hours
            </div>
          </div>

          <!-- Partnerships -->
          <div class="contact-card glass animate-slide-in" style="animation-delay: 0.2s">
            <div class="card-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
              </svg>
            </div>
            <h3>Partnership Opportunities</h3>
            <p>Collaborate with PlateDrop</p>
            <a href="mailto:partnerships@platedrop.fit" class="contact-link">
              partnerships@platedrop.fit
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="7" y1="17" x2="17" y2="7"></line>
                <polyline points="7 7 17 7 17 17"></polyline>
              </svg>
            </a>
            <div class="card-badge">Featured Brands</div>
          </div>

          <!-- Technical Support -->
          <div class="contact-card glass animate-slide-in" style="animation-delay: 0.3s">
            <div class="card-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path>
              </svg>
            </div>
            <h3>Technical Support</h3>
            <p>Website issues or bugs?</p>
            <a href="mailto:support@platedrop.fit" class="contact-link">
              support@platedrop.fit
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="7" y1="17" x2="17" y2="7"></line>
                <polyline points="7 7 17 7 17 17"></polyline>
              </svg>
            </a>
            <div class="support-info">
              <small>Include: Issue description, browser info, screenshots</small>
            </div>
          </div>

          <!-- Media & Press -->
          <div class="contact-card glass animate-slide-in" style="animation-delay: 0.4s">
            <div class="card-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <polygon points="10 8 16 12 10 16 10 8"></polygon>
              </svg>
            </div>
            <h3>Media & Press</h3>
            <p>Interviews and press releases</p>
            <a href="mailto:press@platedrop.fit" class="contact-link">
              press@platedrop.fit
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="7" y1="17" x2="17" y2="7"></line>
                <polyline points="7 7 17 7 17 17"></polyline>
              </svg>
            </a>
            <div class="card-badge accent">Press Kit</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Links Section -->
    <section class="quick-links">
      <div class="container">
        <div class="quick-links-card glass">
          <h2>Before You Reach Out</h2>
          <p>Check our FAQ page - you might find your answer instantly!</p>
          <div class="topics-grid">
            <div class="topic-item">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              <span>Deal tracking explained</span>
            </div>
            <div class="topic-item">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              <span>Equipment recommendations</span>
            </div>
            <div class="topic-item">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              <span>Home gym setup advice</span>
            </div>
            <div class="topic-item">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              <span>Affiliate program info</span>
            </div>
          </div>
          <a href="/faq" class="btn btn-primary">Visit FAQ</a>
        </div>
      </div>
    </section>

    <!-- Social Connect Section -->
    <section class="social-connect">
      <div class="container">
        <h2 class="section-title">Stay Connected</h2>
        <p class="section-subtitle">Follow us for daily deals and home gym inspiration</p>
        <div class="social-grid">
          <a href="https://twitter.com/platedrop" class="social-card glass" target="_blank" rel="noopener noreferrer">
            <div class="social-icon twitter">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"></path>
              </svg>
            </div>
            <span>Twitter</span>
            <small>Coming Soon</small>
          </a>
          <a href="https://instagram.com/platedrop" class="social-card glass" target="_blank" rel="noopener noreferrer">
            <div class="social-icon instagram">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
              </svg>
            </div>
            <span>Instagram</span>
            <small>Coming Soon</small>
          </a>
          <a href="https://reddit.com/r/platedrop" class="social-card glass" target="_blank" rel="noopener noreferrer">
            <div class="social-icon reddit">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0zm5.01 4.744c.688 0 1.25.561 1.25 1.249a1.25 1.25 0 0 1-2.498.056l-2.597-.547-.8 3.747c1.824.07 3.48.632 4.674 1.488.308-.309.73-.491 1.207-.491.968 0 1.754.786 1.754 1.754 0 .716-.435 1.333-1.01 1.614a3.111 3.111 0 0 1 .042.52c0 2.694-3.13 4.87-7.004 4.87-3.874 0-7.004-2.176-7.004-4.87 0-.183.015-.366.043-.534A1.748 1.748 0 0 1 4.028 12c0-.968.786-1.754 1.754-1.754.463 0 .898.196 1.207.49 1.207-.883 2.878-1.43 4.744-1.487l.885-4.182a.342.342 0 0 1 .14-.197.35.35 0 0 1 .238-.042l2.906.617a1.214 1.214 0 0 1 1.108-.701zM9.25 12C8.561 12 8 12.562 8 13.25c0 .687.561 1.248 1.25 1.248.687 0 1.248-.561 1.248-1.249 0-.688-.561-1.249-1.249-1.249zm5.5 0c-.687 0-1.248.561-1.248 1.25 0 .687.561 1.248 1.249 1.248.688 0 1.249-.561 1.249-1.249 0-.687-.562-1.249-1.25-1.249zm-5.466 3.99a.327.327 0 0 0-.231.094.33.33 0 0 0 0 .463c.842.842 2.484.913 2.961.913.477 0 2.105-.056 2.961-.913a.361.361 0 0 0 .029-.463.33.33 0 0 0-.464 0c-.547.533-1.684.73-2.512.73-.828 0-1.979-.196-2.512-.73a.326.326 0 0 0-.232-.095z"/>
              </svg>
            </div>
            <span>Reddit</span>
            <small>Coming Soon</small>
          </a>
        </div>
      </div>
    </section>

    <!-- Roadmap Section -->
    <section class="roadmap">
      <div class="container">
        <div class="roadmap-card glass">
          <h2>What We're Building</h2>
          <p>Your feedback shapes PlateDrop's future. Here's what's coming:</p>
          <div class="roadmap-grid">
            <div class="roadmap-item">
              <div class="roadmap-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
              </div>
              <h4>Email Deal Alerts</h4>
              <div class="status-badge active">In Progress</div>
            </div>
            <div class="roadmap-item">
              <div class="roadmap-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
                </svg>
              </div>
              <h4>Price Drop Notifications</h4>
              <div class="status-badge">Planned</div>
            </div>
            <div class="roadmap-item">
              <div class="roadmap-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect>
                  <line x1="12" y1="18" x2="12.01" y2="18"></line>
                </svg>
              </div>
              <h4>Mobile App</h4>
              <div class="status-badge">Planned</div>
            </div>
            <div class="roadmap-item">
              <div class="roadmap-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                  <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                  <line x1="12" y1="22.08" x2="12" y2="12"></line>
                </svg>
              </div>
              <h4>Expanded Retailers</h4>
              <div class="status-badge active">In Progress</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Privacy Notice -->
    <section class="privacy-notice">
      <div class="container">
        <div class="notice-content">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
          </svg>
          <p>We respect your privacy and will never share your contact information with third parties. See our <a href="/privacy-policy">Privacy Policy</a> for details.</p>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .contact-page {
    min-height: 100vh;
    padding-bottom: var(--space-20);
  }

  /* Hero Section */
  .contact-hero {
    padding: var(--space-20) 0 var(--space-16);
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .contact-hero::before {
    content: '';
    position: absolute;
    top: -50%;
    left: 50%;
    transform: translateX(-50%);
    width: 150%;
    height: 200%;
    background: radial-gradient(circle, rgba(255, 107, 53, 0.15) 0%, transparent 70%);
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 1;
  }

  .hero-title {
    font-size: var(--text-5xl);
    font-weight: 900;
    margin-bottom: var(--space-4);
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: var(--text-xl);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Contact Methods Grid */
  .contact-methods {
    padding: var(--space-12) 0;
  }

  .methods-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-6);
  }

  .contact-card {
    padding: var(--space-8);
    border-radius: var(--radius-2xl);
    transition: all var(--transition-base);
    position: relative;
    overflow: hidden;
  }

  .contact-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--gradient-primary);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform var(--transition-base);
  }

  .contact-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-2xl);
    border-color: var(--color-primary);
  }

  .contact-card:hover::before {
    transform: scaleX(1);
  }

  .card-icon {
    width: 64px;
    height: 64px;
    background: var(--gradient-primary);
    border-radius: var(--radius-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--space-4);
    color: white;
  }

  .contact-card h3 {
    font-size: var(--text-xl);
    margin-bottom: var(--space-2);
    color: var(--color-text);
  }

  .contact-card p {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-4);
    font-size: var(--text-sm);
  }

  .contact-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-primary);
    font-weight: 600;
    font-size: var(--text-base);
    padding: var(--space-3) var(--space-4);
    background: rgba(255, 107, 53, 0.1);
    border-radius: var(--radius-lg);
    transition: all var(--transition-fast);
    margin-bottom: var(--space-4);
  }

  .contact-link:hover {
    background: rgba(255, 107, 53, 0.2);
    transform: translateX(4px);
  }

  .contact-link svg {
    transition: transform var(--transition-fast);
  }

  .contact-link:hover svg {
    transform: translate(2px, -2px);
  }

  .response-time {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-xs);
    color: var(--color-text-tertiary);
  }

  .response-time svg {
    color: var(--color-success);
  }

  .card-badge {
    position: absolute;
    top: var(--space-4);
    right: var(--space-4);
    background: var(--gradient-primary);
    color: white;
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .card-badge.accent {
    background: var(--gradient-accent);
    color: var(--color-bg);
  }

  .support-info {
    margin-top: var(--space-3);
  }

  .support-info small {
    color: var(--color-text-tertiary);
    font-size: var(--text-xs);
    line-height: 1.5;
  }

  /* Quick Links Section */
  .quick-links {
    padding: var(--space-12) 0;
  }

  .quick-links-card {
    padding: var(--space-12);
    border-radius: var(--radius-2xl);
    text-align: center;
  }

  .quick-links-card h2 {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-4);
  }

  .quick-links-card > p {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-8);
  }

  .topics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-4);
    margin-bottom: var(--space-8);
  }

  .topic-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-4);
    background: rgba(255, 107, 53, 0.05);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(255, 107, 53, 0.1);
    transition: all var(--transition-fast);
  }

  .topic-item:hover {
    background: rgba(255, 107, 53, 0.1);
    border-color: var(--color-primary);
    transform: translateX(4px);
  }

  .topic-item svg {
    color: var(--color-success);
    flex-shrink: 0;
  }

  .topic-item span {
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
    text-align: left;
  }

  /* Social Connect Section */
  .social-connect {
    padding: var(--space-12) 0;
  }

  .section-title {
    text-align: center;
    font-size: var(--text-4xl);
    margin-bottom: var(--space-3);
  }

  .section-subtitle {
    text-align: center;
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-10);
  }

  .social-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-6);
    max-width: 800px;
    margin: 0 auto;
  }

  .social-card {
    padding: var(--space-8);
    border-radius: var(--radius-2xl);
    text-align: center;
    transition: all var(--transition-base);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
  }

  .social-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: var(--shadow-2xl);
  }

  .social-icon {
    width: 56px;
    height: 56px;
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--transition-base);
  }

  .social-icon.twitter {
    background: linear-gradient(135deg, #1DA1F2 0%, #0d8bd9 100%);
    color: white;
  }

  .social-icon.instagram {
    background: linear-gradient(135deg, #f09433 0%,#e6683c 25%,#dc2743 50%,#cc2366 75%,#bc1888 100%);
    color: white;
  }

  .social-icon.reddit {
    background: linear-gradient(135deg, #FF4500 0%, #d63a00 100%);
    color: white;
  }

  .social-card:hover .social-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .social-card span {
    font-weight: 700;
    font-size: var(--text-lg);
    color: var(--color-text);
  }

  .social-card small {
    color: var(--color-text-tertiary);
    font-size: var(--text-xs);
  }

  /* Roadmap Section */
  .roadmap {
    padding: var(--space-12) 0;
  }

  .roadmap-card {
    padding: var(--space-12);
    border-radius: var(--radius-2xl);
  }

  .roadmap-card h2 {
    text-align: center;
    font-size: var(--text-3xl);
    margin-bottom: var(--space-3);
  }

  .roadmap-card > p {
