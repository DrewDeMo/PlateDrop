---
import BaseLayout from '@layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import HeroSection from '@components/home/HeroSection.astro';
import TrustSection from '@components/home/TrustSection.astro';
import ProcessSection from '@components/home/ProcessSection.astro';
import DealsSection from '@components/home/DealsSection.astro';
import FeaturesSection from '@components/home/FeaturesSection.astro';
import CategoriesSection from '@components/home/CategoriesSection.astro';
import ValuePropsSection from '@components/home/ValuePropsSection.astro';
import CtaSection from '@components/home/CtaSection.astro';
import { buildItemListSchema, loadHomepageDeals } from '@utils/deals';
import DealCard from '@components/DealCard.astro';

const { deals, generatedAt } = await loadHomepageDeals(6);

const displayDate = generatedAt ? new Date(generatedAt) : new Date();
const formattedDate = displayDate.toLocaleDateString('en-US', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const itemListSchema = buildItemListSchema(deals);
const schemaType = deals.length ? 'ItemList' : 'WebPage';

const faqItems = [
  {
    question: 'How do you find the best home gym equipment deals?',
    answer:
      'Our deal engine checks prices on squat racks, barbells, dumbbells, and cardio machines at major retailers every hour. We only feature discounts that beat the 30 to 90-day average pricing so you see genuine savings.'
  },
  {
    question: 'How often is the PlateDrop home gym deals page updated?',
    answer:
      'Fresh data is published daily at 2 AM UTC. When prices change or products go out of stock we remove or refresh them within 24 hours so you are always looking at live offers.'
  },
  {
    question: 'Can beginners use these home gym deals to build a full setup?',
    answer:
      'Yes. We highlight foundational gear first—like racks, benches, plates, and adjustable dumbbells—then surface specialty equipment as discounts appear. Pair the deals with our buying guides to build a complete gym on budget.'
  }
];

const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: faqItems.map((item) => ({
    '@type': 'Question',
    name: item.question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: item.answer
    }
  }))
};

const structuredData = [
  ...(itemListSchema ? [itemListSchema] : []),
  faqSchema
];
---

<BaseLayout
  title="Today's Home Gym Deals"
  description="Daily curated deals on home gym equipment including power racks, barbells, dumbbells, and cardio machines. Save on quality fitness gear."
  schemaType={schemaType}
  structuredData={structuredData}
>

  <!-- Hero Section -->
  <div class="hero relative overflow-visible min-h-[600px] flex items-center -mt-[72px] pt-[72px]" style="background: linear-gradient(135deg, #3d2817 0%, #2d1f14 50%, #1a1614 100%);">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 25% 25%, rgba(255, 107, 53, 0.3) 0%, transparent 50%), radial-gradient(circle at 75% 75%, rgba(255, 107, 53, 0.2) 0%, transparent 50%);"></div>
    </div>
    
    <!-- Featured Image - Extends above nav -->
    <div class="hero-image absolute right-0 -top-[72px] bottom-0 w-[55%] flex items-end justify-end pointer-events-none z-[999]">
      <Image
        src="/images/hero/hero_feature.webp"
        alt="Fitness athlete"
        width={700}
        height={700}
        loading="eager"
        fetchpriority="high"
        format="webp"
        quality={90}
        class="h-[calc(100%+72px)] w-auto object-contain object-bottom"
      />
    </div>
    
    <div class="container max-w-[1400px] mx-auto px-6 relative z-10">
      <div class="hero-content max-w-[600px] py-20">
        <h1 class="text-[clamp(2.5rem,6vw,4.5rem)] font-black leading-[1.1] tracking-tight text-white mb-6">
          Today's Best Home Gym Equipment Deals
        </h1>
        <p class="text-lg leading-relaxed text-white/70 mb-6 max-w-[520px]">
          Discover verified discounts on power racks, barbells, dumbbells, benches, and cardio machines. Our deal experts track prices across trusted retailers so you can build a complete home gym for less.
        </p>
        <p class="text-sm font-semibold uppercase tracking-[0.2em] text-white/60 mb-10">
          Updated {formattedDate}
        </p>

        <div class="hero-cta flex items-center gap-4 flex-wrap mb-12">
          <a href="#deals" class="inline-flex items-center gap-2 px-8 py-4 bg-[#ff6b35] text-white text-base font-bold rounded-full no-underline transition-all duration-200 hover:bg-[#ff5722] hover:text-white hover:shadow-lg hover:shadow-[#ff6b35]/30">
            See Today's Deals
          </a>
          <button class="inline-flex items-center gap-2 px-6 py-4 bg-transparent text-white text-base font-semibold border-2 border-white/20 rounded-full transition-all duration-200 hover:bg-white/10 hover:border-white/40">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M8 5v14l11-7z"/>
            </svg>
            Watch How PlateDrop Works
          </button>
        </div>

        <!-- User Avatars & Stats -->
        <div class="flex items-center gap-6">
          <div class="flex items-center -space-x-3">
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-orange-400 to-red-500 border-2 border-[#1a1614] flex items-center justify-center text-white text-sm font-bold">A</div>
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-400 to-purple-500 border-2 border-[#1a1614] flex items-center justify-center text-white text-sm font-bold">B</div>
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-green-400 to-teal-500 border-2 border-[#1a1614] flex items-center justify-center text-white text-sm font-bold">C</div>
          </div>
          <div class="text-white/60 text-sm">
            <span class="text-white font-semibold">2,000+</span> members joined
          </div>
        </div>
      </div>
    </div>
    
    <!-- Category Tags -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex items-center gap-3 flex-wrap justify-center px-6 z-10">
      <span class="px-4 py-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full text-white text-xs font-medium">Personal Training</span>
      <span class="px-4 py-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full text-white text-xs font-medium">Strength</span>
      <span class="px-4 py-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full text-white text-xs font-medium">Group Classes</span>
      <span class="px-4 py-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full text-white text-xs font-medium">Cardio Equipment</span>
      <span class="px-4 py-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full text-white text-xs font-medium">Functional Workouts</span>
    </div>
  </div>

  <!-- SEO Intro Section -->
  <section class="seo-intro-section py-16 bg-bg text-text">
    <div class="container max-w-[1100px] mx-auto px-6">
      <div class="grid gap-12 items-start md:grid-cols-[1.2fr_1fr]">
        <div class="seo-intro-copy">
          <h2 class="text-3xl md:text-[2.5rem] font-black tracking-tight mb-6">
            Why PlateDrop Leads the Home Gym Deal Search Results
          </h2>
          <p class="text-base md:text-lg leading-relaxed text-text-secondary mb-6">
            PlateDrop monitors the same search phrases lifters use—like "best home gym deals," "cheap squat rack," and "adjustable dumbbell sale." Our price history checks filter out fake MSRP discounts so every feature below reflects a real opportunity to save on trusted brands.
          </p>
          <p class="text-base md:text-lg leading-relaxed text-text-secondary mb-6">
            Whether you're piecing together your first garage gym or upgrading with a smart cardio machine, you will find the exact retailer links, specs, and price drops you need. Dive deeper with our in-depth <a href="/guides" class="text-primary font-semibold underline hover:text-secondary">home gym buying guides</a> and <a href="/workouts" class="text-primary font-semibold underline hover:text-secondary">training plans</a> to maximize every piece of equipment you bring home.
          </p>
        </div>
        <div class="seo-intro-sidebar bg-surface border border-border rounded-2xl p-8 shadow-[0_12px_40px_rgba(0,0,0,0.12)]">
          <h3 class="text-xl font-bold text-text mb-4">Popular Deal Categories</h3>
          <ul class="space-y-3 text-base text-text-secondary">
            <li class="flex items-start gap-2">
              <span class="mt-1 text-primary">•</span>
              <span>Power racks &amp; squat stands with multi-grip pull-up bars</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="mt-1 text-primary">•</span>
              <span>Olympic barbells, bumper plates, and quick-change collars</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="mt-1 text-primary">•</span>
              <span>Adjustable dumbbells, kettlebells, and resistance systems</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="mt-1 text-primary">•</span>
              <span>Treadmills, rowers, bikes, and connected cardio equipment</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Section -->
  <section class="trust-section py-16 bg-bg border-b border-border">
    <div class="container">
      <div class="trust-grid grid grid-cols-[repeat(auto-fit,minmax(200px,1fr))] gap-8">
        <div class="trust-card text-center p-6">
          <div class="trust-number text-[clamp(2rem,4vw,3rem)] font-extrabold text-primary leading-none mb-2">24/7</div>
          <div class="trust-label text-base text-text-secondary font-semibold">Price Monitoring</div>
        </div>
        <div class="trust-card text-center p-6">
          <div class="trust-number text-[clamp(2rem,4vw,3rem)] font-extrabold text-primary leading-none mb-2">5+</div>
          <div class="trust-label text-base text-text-secondary font-semibold">Major Retailers</div>
        </div>
        <div class="trust-card text-center p-6">
          <div class="trust-number text-[clamp(2rem,4vw,3rem)] font-extrabold text-primary leading-none mb-2">100%</div>
          <div class="trust-label text-base text-text-secondary font-semibold">Verified Deals</div>
        </div>
        <div class="trust-card text-center p-6">
          <div class="trust-number text-[clamp(2rem,4vw,3rem)] font-extrabold text-primary leading-none mb-2">Daily</div>
          <div class="trust-label text-base text-text-secondary font-semibold">Updates</div>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="how-it-works-section py-24 bg-bg-secondary">
    <div class="container">
      <div class="section-header-modern text-center mb-16">
        <div class="section-eyebrow inline-block text-sm font-bold text-primary uppercase tracking-wider mb-4">Our Process</div>
        <h2 class="section-title-modern text-4xl font-black mb-4 bg-gradient-primary bg-clip-text text-transparent">How We Find the Best Deals</h2>
        <p class="section-description-modern text-xl text-text-secondary max-w-[60ch] mx-auto">
          Automated tracking and verification to ensure you get genuine savings
        </p>
      </div>
      
      <div class="process-grid grid grid-cols-[repeat(auto-fit,minmax(250px,1fr))] gap-10 mt-12">
        <div class="process-step relative">
          <div class="process-number text-4xl font-extrabold text-primary/20 leading-none mb-4">01</div>
          <h3 class="text-xl font-bold text-text mb-3">Monitor Prices</h3>
          <p class="text-base leading-relaxed text-text-secondary m-0">Our system tracks thousands of products across major retailers 24/7, comparing current prices against 30-90 day averages.</p>
        </div>
        <div class="process-step relative">
          <div class="process-number text-4xl font-extrabold text-primary/20 leading-none mb-4">02</div>
          <h3 class="text-xl font-bold text-text mb-3">Verify Discounts</h3>
          <p class="text-base leading-relaxed text-text-secondary m-0">Each deal is validated against historical data to confirm genuine savings—no inflated "original" prices.</p>
        </div>
        <div class="process-step relative">
          <div class="process-number text-4xl font-extrabold text-primary/20 leading-none mb-4">03</div>
          <h3 class="text-xl font-bold text-text mb-3">Quality Check</h3>
          <p class="text-base leading-relaxed text-text-secondary m-0">Only equipment from reputable brands with solid warranties makes our list.</p>
        </div>
        <div class="process-step relative">
          <div class="process-number text-4xl font-extrabold text-primary/20 leading-none mb-4">04</div>
          <h3 class="text-xl font-bold text-text mb-3">Daily Updates</h3>
          <p class="text-base leading-relaxed text-text-secondary m-0">Fresh deals every morning at 2 AM UTC. Out-of-stock items are removed within 24 hours.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Deals Section -->
  <section id="deals" class="deals-section py-24 relative">
    <div class="container">
      <div class="section-header-modern text-center mb-16">
        <div class="section-eyebrow inline-block text-sm font-bold text-primary uppercase tracking-wider mb-4">Today's Best Offers</div>
        <h2 class="section-title-modern text-4xl font-black mb-4 bg-gradient-primary bg-clip-text text-transparent">Featured Deals</h2>
        <p class="section-description-modern text-xl text-text-secondary max-w-[60ch] mx-auto">
          Verified discounts on premium equipment. Updated daily at 2 AM UTC.
        </p>
      </div>

      <div class="affiliate-disclosure-banner bg-primary/10 border border-primary/20 rounded-lg p-4 mb-8 text-center">
        <p class="m-0 text-sm text-text-secondary flex items-center justify-center gap-2 flex-wrap">
          <strong>Affiliate Disclosure:</strong> We participate in the Amazon Associates Program and other affiliate programs.
          We may earn commissions from qualifying purchases at no extra cost to you.
          <a href="/affiliate-disclosure" class="text-primary underline font-semibold hover:text-secondary">Learn more</a>
        </p>
      </div>
      
      <div class="deals-grid grid grid-cols-[repeat(auto-fill,minmax(340px,1fr))] gap-10 mb-16">
        {deals.length > 0 ? 
          deals.map((deal, index) => (
            <div class="deal-wrapper animate-fade-in" style={`animation-delay: ${index * 100}ms`}>
              <DealCard {...deal} />
            </div>
          ))
         : 
          <div class="no-deals col-span-full text-center p-20 bg-gradient-card backdrop-blur-glass rounded-2xl border-2 border-dashed border-border">
            <svg class="no-deals-icon text-5xl mb-6 animate-float inline-block" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M6.5 6.5h11M6.5 17.5h11M9 12h6"/>
              <circle cx="9" cy="9" r="1.5"/>
              <circle cx="15" cy="9" r="1.5"/>
              <circle cx="9" cy="15" r="1.5"/>
              <circle cx="15" cy="15" r="1.5"/>
            </svg>
            <h3 class="text-2xl mb-3">No deals available yet</h3>
            <p class="text-base text-text-secondary">Check back soon! Our automated system runs daily at 2 AM UTC to fetch the latest deals.</p>
          </div>
        }
      </div>
      
      <div class="deals-footer pt-10 border-t border-border">
        <p class="disclaimer text-sm text-text-tertiary text-center max-w-[70ch] mx-auto leading-relaxed flex items-center justify-center gap-2">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="flex-shrink-0 text-primary">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="16" x2="12" y2="12"></line>
            <line x1="12" y1="8" x2="12.01" y2="8"></line>
          </svg>
          <strong>Price Disclaimer:</strong> Prices and availability are accurate as of posting time but may change.
          We earn from qualifying purchases through affiliate links.
        </p>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="features-section py-24 bg-gradient-to-br from-[#1a1a1a] to-[#2d2d2d]">
    <div class="container">
      <div class="features-split grid grid-cols-2 gap-16 items-center">
        <div class="features-content text-white">
          <div class="section-eyebrow text-primary text-sm font-bold uppercase tracking-wider mb-4">Why PlateDrop</div>
          <h2 class="section-title-large text-[clamp(2rem,4vw,3rem)] font-extrabold text-white mb-4 tracking-tight leading-[1.1]">Built for Serious Lifters</h2>
          <p class="features-intro text-xl text-white/80 mb-10 leading-relaxed">
            We automate the tedious work of finding legitimate deals so you can spend your time where it matters—in the gym.
          </p>
          <div class="features-list flex flex-col gap-6">
            <div class="feature-item flex gap-4 items-start">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="flex-shrink-0 text-primary mt-0.5">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
              </svg>
              <div>
                <h4 class="text-lg font-bold text-white mb-1">Verified Discounts</h4>
                <p class="text-base text-white/70 m-0">Historical price validation on every deal</p>
              </div>
            </div>
            <div class="feature-item flex gap-4 items-start">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="flex-shrink-0 text-primary mt-0.5">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
              <div>
                <h4 class="text-lg font-bold text-white mb-1">Daily Updates</h4>
                <p class="text-base text-white/70 m-0">Fresh deals every morning at 2 AM UTC</p>
              </div>
            </div>
            <div class="feature-item flex gap-4 items-start">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="flex-shrink-0 text-primary mt-0.5">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
              </svg>
              <div>
                <h4 class="text-lg font-bold text-white mb-1">Privacy Focused</h4>
                <p class="text-base text-white/70 m-0">No tracking, no spam, no data selling</p>
              </div>
            </div>
          </div>
        </div>
        <div class="features-visual grid grid-cols-1 gap-4">
          <div class="features-stat-card p-8 bg-white/5 border border-white/10 rounded-xl text-center">
            <div class="stat-large text-[clamp(2.5rem,5vw,4rem)] font-extrabold text-primary leading-none mb-2">5+</div>
            <div class="stat-label text-base text-white/80 font-semibold">Major Retailers Tracked</div>
          </div>
          <div class="features-stat-card p-8 bg-white/5 border border-white/10 rounded-xl text-center">
            <div class="stat-large text-[clamp(2.5rem,5vw,4rem)] font-extrabold text-primary leading-none mb-2">1000s</div>
            <div class="stat-label text-base text-white/80 font-semibold">Products Monitored</div>
          </div>
          <div class="features-stat-card p-8 bg-white/5 border border-white/10 rounded-xl text-center">
            <div class="stat-large text-[clamp(2.5rem,5vw,4rem)] font-extrabold text-primary leading-none mb-2">24/7</div>
            <div class="stat-label text-base text-white/80 font-semibold">Price Monitoring</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="categories-section py-24 bg-bg">
    <div class="container-wide max-w-[1400px] mx-auto px-6">
      <div class="section-header-modern text-center mb-12">
        <div class="section-eyebrow inline-block text-sm font-bold text-primary uppercase tracking-wider mb-4">Shop by Category</div>
        <h2 class="section-title-modern text-4xl font-black bg-gradient-primary bg-clip-text text-transparent">Find Your Equipment</h2>
      </div>
      
      <div class="categories-showcase grid grid-cols-[1.5fr_1fr] gap-6 mt-12">
        <a href="/deals?category=racks" class="category-large bg-gradient-to-br from-primary to-primary-dark rounded-2xl p-12 no-underline text-white flex items-center justify-center min-h-[400px] transition-transform duration-base hover:scale-[1.02] hover:no-underline">
          <div class="category-large-content text-center">
            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="mb-6 inline-block">
              <rect x="4" y="2" width="16" height="20" rx="2"/>
              <line x1="8" y1="6" x2="16" y2="6"/>
              <line x1="8" y1="12" x2="16" y2="12"/>
              <line x1="8" y1="18" x2="16" y2="18"/>
            </svg>
            <h3 class="text-3xl font-extrabold mb-3 text-white">Power Racks</h3>
            <p class="text-lg mb-6 opacity-90">Squat racks, cages & rigs</p>
            <span class="category-link inline-block text-base font-bold px-6 py-3 bg-white/20 rounded-lg transition-colors duration-base hover:bg-white/30">Browse Deals →</span>
          </div>
        </a>
        
        <div class="categories-grid-compact grid grid-cols-1 gap-4">
          <a href="/deals?category=barbells" class="category-compact flex items-center gap-4 p-6 bg-surface border-2 border-border rounded-xl no-underline transition-all duration-base hover:border-primary hover:bg-surface-elevated hover:translate-x-2 hover:no-underline">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-primary flex-shrink-0">
              <line x1="4" y1="12" x2="20" y2="12"/>
              <circle cx="6" cy="12" r="3"/>
              <circle cx="18" cy="12" r="3"/>
            </svg>
            <div class="flex-1 flex items-center justify-between">
              <h4 class="text-lg font-bold text-text m-0">Barbells</h4>
              <span class="text-primary text-xl font-bold">→</span>
            </div>
          </a>
          
          <a href="/deals?category=plates" class="category-compact flex items-center gap-4 p-6 bg-surface border-2 border-border rounded-xl no-underline transition-all duration-base hover:border-primary hover:bg-surface-elevated hover:translate-x-2 hover:no-underline">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-primary flex-shrink-0">
              <circle cx="12" cy="12" r="10"/>
              <circle cx="12" cy="12" r="4"/>
            </svg>
            <div class="flex-1 flex items-center justify-between">
              <h4 class="text-lg font-bold text-text m-0">Weight Plates</h4>
              <span class="text-primary text-xl font-bold">→</span>
            </div>
          </a>
          
          <a href="/deals?category=dumbbells" class="category-compact flex items-center gap-4 p-6 bg-surface border-2 border-border rounded-xl no-underline transition-all duration-base hover:border-primary hover:bg-surface-elevated hover:translate-x-2 hover:no-underline">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-primary flex-shrink-0">
              <line x1="6" y1="12" x2="18" y2="12"/>
              <rect x="3" y="9" width="4" height="6" rx="1"/>
              <rect x="17" y="9" width="4" height="6" rx="1"/>
            </svg>
            <div class="flex-1 flex items-center justify-between">
              <h4 class="text-lg font-bold text-text m-0">Dumbbells</h4>
              <span class="text-primary text-xl font-bold">→</span>
            </div>
          </a>
          
