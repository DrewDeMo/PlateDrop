---
import BaseLayout from '@layouts/BaseLayout.astro';

const guides = [
  {
    title: "Complete Home Gym Setup Guide",
    description: "Step-by-step guide to building your perfect home gym from planning to first workout.",
    category: "Getting Started",
    readTime: "25 min read",
    slug: "home-gym-setup",
    image: "https://images.unsplash.com/photo-1534438327276-14e5300c3a48?w=800&h=600&fit=crop"
  },
  {
    title: "Power Rack Buying Guide",
    description: "Complete guide to choosing the perfect power rack for your space, budget, and training goals.",
    category: "Equipment",
    readTime: "20 min read",
    slug: "power-racks",
    image: "https://images.unsplash.com/photo-1517836357463-d25dfeac3438?w=800&h=600&fit=crop"
  },
  {
    title: "Barbell Buying Guide",
    description: "The ultimate guide to choosing a barbell - Olympic vs standard, power vs Oly bars, and more.",
    category: "Equipment",
    readTime: "22 min read",
    slug: "barbells",
    image: "https://images.unsplash.com/photo-1571902943202-507ec2618e8f?w=800&h=600&fit=crop"
  },
  {
    title: "Weight Plates Guide",
    description: "Iron vs bumper plates, sizing, materials, and finding the best plates for your budget.",
    category: "Equipment",
    readTime: "20 min read",
    slug: "weight-plates",
    image: "https://images.unsplash.com/photo-1534438327276-14e5300c3a48?w=800&h=600&fit=crop"
  }
];

const categories = [...new Set(guides.map(g => g.category))];
---

<BaseLayout
  title="Home Gym Guides & Resources - PlateDrop"
  description="Expert guides on building your home gym, choosing equipment, and getting the most value for your money. From beginner setups to advanced training spaces."
>
  <div class="bg-gradient-to-br from-primary to-secondary text-white py-16 md:py-12 relative overflow-hidden">
    <div class="absolute inset-0 opacity-10 pointer-events-none" style="background: url(&quot;data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E&quot;);"></div>
    <div class="container">
      <div class="relative z-10 max-w-[800px] mx-auto text-center">
        <h1 class="text-4xl font-extrabold mb-4 text-white">Home Gym Guides & Resources</h1>
        <p class="text-lg leading-relaxed opacity-95 max-w-[60ch] mx-auto text-white">
          Expert advice on building, equipping, and optimizing your home gym.
          From beginner setups to advanced training spaces.
        </p>
      </div>
    </div>
  </div>

  <section class="py-16">
    <div class="container">
      <div class="flex gap-3 mb-12 flex-wrap justify-center">
        <button class="filter-btn py-3 px-6 bg-surface border-2 border-border rounded-full text-base font-semibold text-text-secondary cursor-pointer transition-all duration-300 hover:border-primary hover:text-primary hover:-translate-y-0.5 active:bg-primary active:border-primary active:text-white" data-category="all">All Guides</button>
        {categories.map(category => (
          <button class="filter-btn py-3 px-6 bg-surface border-2 border-border rounded-full text-base font-semibold text-text-secondary cursor-pointer transition-all duration-300 hover:border-primary hover:text-primary hover:-translate-y-0.5" data-category={category.toLowerCase()}>
            {category}
          </button>
        ))}
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {guides.map((guide) => (
          <article class="guide-card flex flex-col bg-surface border border-border rounded-xl overflow-hidden transition-all duration-300 h-full hover:-translate-y-1 hover:shadow-xl hover:border-primary" data-category={guide.category.toLowerCase()}>
            <div class="relative aspect-video overflow-hidden bg-bg-tertiary">
              <img src={guide.image} alt={guide.title} loading="lazy" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" />
              <span class="absolute top-3 left-3 bg-primary text-white py-2 px-4 rounded-full text-xs font-bold uppercase tracking-wider">{guide.category}</span>
            </div>
            <div class="flex flex-col gap-3 p-6 flex-1">
              <div class="flex items-center gap-4">
                <span class="flex items-center gap-2 text-sm text-text-tertiary">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                  </svg>
                  {guide.readTime}
                </span>
              </div>
              <h2 class="text-xl font-bold text-text leading-tight m-0">{guide.title}</h2>
              <p class="text-base leading-relaxed text-text-secondary flex-1">{guide.description}</p>
              <a href={`/guides/${guide.slug}`} class="guide-link inline-flex items-center gap-2 text-base font-semibold text-primary no-underline mt-auto transition-all duration-200 hover:gap-3">
                Read Guide
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                  <polyline points="12 5 19 12 12 19"></polyline>
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="py-20 bg-bg-secondary">
    <div class="container">
      <div class="max-w-[700px] mx-auto text-center p-12 bg-surface border border-border rounded-2xl shadow-lg">
        <h2 class="text-3xl mb-4">Get Weekly Home Gym Tips</h2>
        <p class="text-lg text-text-secondary mb-8 max-w-[50ch] mx-auto">
          Join 5,000+ home gym enthusiasts getting expert tips, deal alerts, and equipment guides delivered weekly.
        </p>
        <form class="flex gap-3 max-w-[500px] mx-auto mb-4">
          <input
            type="email"
            placeholder="Enter your email"
            required
            class="flex-1 py-4 px-5 text-base border-2 border-border rounded-lg bg-bg text-text transition-colors duration-200 focus:outline-none focus:border-primary"
          />
          <button type="submit" class="btn btn-primary">
            Subscribe
          </button>
        </form>
        <p class="text-sm text-text-tertiary m-0">
          No spam, unsubscribe anytime. We respect your privacy.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .guide-card:hover img {
    transform: scale(1.05);
  }
  
  .filter-btn.active {
    background-color: var(--color-primary);
    border-color: var(--color-primary);
    color: white;
  }
  
  .guide-link:hover {
    text-decoration: none;
  }
</style>

<script>
  // Simple filter functionality
  document.addEventListener('DOMContentLoaded', () => {
    const filterBtns = document.querySelectorAll('.filter-btn');
    const guideCards = document.querySelectorAll('.guide-card');
    
    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const category = btn.dataset.category;
        
        // Update active state
        filterBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        // Filter cards
        guideCards.forEach(card => {
          if (category === 'all' || card.dataset.category === category) {
            card.style.display = 'flex';
          } else {
            card.style.display = 'none';
          }
        });
      });
    });
  });
</script>
