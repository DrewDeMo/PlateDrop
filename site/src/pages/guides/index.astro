---
import BaseLayout from '@layouts/BaseLayout.astro';

const guides = [
  {
    title: "Complete Home Gym Setup Guide",
    description: "Step-by-step guide to building your perfect home gym from planning to first workout.",
    category: "Getting Started",
    readTime: "25 min read",
    slug: "home-gym-setup",
    image: "https://images.unsplash.com/photo-1534438327276-14e5300c3a48?w=800&h=600&fit=crop"
  },
  {
    title: "Power Rack Buying Guide",
    description: "Complete guide to choosing the perfect power rack for your space, budget, and training goals.",
    category: "Equipment",
    readTime: "20 min read",
    slug: "power-racks",
    image: "https://images.unsplash.com/photo-1517836357463-d25dfeac3438?w=800&h=600&fit=crop"
  },
  {
    title: "Barbell Buying Guide",
    description: "The ultimate guide to choosing a barbell - Olympic vs standard, power vs Oly bars, and more.",
    category: "Equipment",
    readTime: "22 min read",
    slug: "barbells",
    image: "https://images.unsplash.com/photo-1571902943202-507ec2618e8f?w=800&h=600&fit=crop"
  },
  {
    title: "Weight Plates Guide",
    description: "Iron vs bumper plates, sizing, materials, and finding the best plates for your budget.",
    category: "Equipment",
    readTime: "20 min read",
    slug: "weight-plates",
    image: "https://images.unsplash.com/photo-1534438327276-14e5300c3a48?w=800&h=600&fit=crop"
  }
];

const categories = [...new Set(guides.map(g => g.category))];
---

<BaseLayout
  title="Home Gym Guides & Resources - PlateDrop"
  description="Expert guides on building your home gym, choosing equipment, and getting the most value for your money. From beginner setups to advanced training spaces."
>
  <div class="guides-hero">
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-title">Home Gym Guides & Resources</h1>
        <p class="hero-subtitle">
          Expert advice on building, equipping, and optimizing your home gym. 
          From beginner setups to advanced training spaces.
        </p>
      </div>
    </div>
  </div>

  <section class="guides-section">
    <div class="container">
      <div class="filters">
        <button class="filter-btn active" data-category="all">All Guides</button>
        {categories.map(category => (
          <button class="filter-btn" data-category={category.toLowerCase()}>
            {category}
          </button>
        ))}
      </div>

      <div class="guides-grid">
        {guides.map((guide) => (
          <article class="guide-card" data-category={guide.category.toLowerCase()}>
            <div class="guide-image">
              <img src={guide.image} alt={guide.title} loading="lazy" />
              <span class="guide-category">{guide.category}</span>
            </div>
            <div class="guide-content">
              <div class="guide-meta">
                <span class="read-time">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                  </svg>
                  {guide.readTime}
                </span>
              </div>
              <h2 class="guide-title">{guide.title}</h2>
              <p class="guide-description">{guide.description}</p>
              <a href={`/guides/${guide.slug}`} class="guide-link">
                Read Guide
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                  <polyline points="12 5 19 12 12 19"></polyline>
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="newsletter-section">
    <div class="container">
      <div class="newsletter-card">
        <h2>Get Weekly Home Gym Tips</h2>
        <p>
          Join 5,000+ home gym enthusiasts getting expert tips, deal alerts, and equipment guides delivered weekly.
        </p>
        <form class="newsletter-form">
          <input 
            type="email" 
            placeholder="Enter your email" 
            required 
            class="newsletter-input"
          />
          <button type="submit" class="btn btn-primary">
            Subscribe
          </button>
        </form>
        <p class="newsletter-disclaimer">
          No spam, unsubscribe anytime. We respect your privacy.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .guides-hero {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    color: white;
    padding-block: var(--space-16) var(--space-12);
    position: relative;
    overflow: hidden;
  }
  
  .guides-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    opacity: 0.1;
  }
  
  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin-inline: auto;
    text-align: center;
  }
  
  .hero-title {
    font-size: var(--text-4xl);
    font-weight: 800;
    margin-bottom: var(--space-4);
    color: white;
  }
  
  .hero-subtitle {
    font-size: var(--text-lg);
    line-height: 1.6;
    opacity: 0.95;
    max-width: 60ch;
    margin-inline: auto;
    color: white;
  }
  
  .guides-section {
    padding-block: var(--space-16);
  }
  
  .filters {
    display: flex;
    gap: var(--space-3);
    margin-bottom: var(--space-12);
    flex-wrap: wrap;
    justify-content: center;
  }
  
  .filter-btn {
    padding: var(--space-3) var(--space-6);
    background-color: var(--color-surface);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-full);
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--color-text-secondary);
    cursor: pointer;
    transition: all var(--transition-base);
  }
  
  .filter-btn:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
    transform: translateY(-2px);
  }
  
  .filter-btn.active {
    background-color: var(--color-primary);
    border-color: var(--color-primary);
    color: white;
  }
  
  .guides-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: var(--space-8);
  }
  
  .guide-card {
    display: flex;
    flex-direction: column;
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: all var(--transition-base);
    height: 100%;
  }
  
  .guide-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
    border-color: var(--color-primary);
  }
  
  .guide-image {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background-color: var(--color-bg-tertiary);
  }
  
  .guide-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }
  
  .guide-card:hover .guide-image img {
    transform: scale(1.05);
  }
  
  .guide-category {
    position: absolute;
    top: var(--space-3);
    left: var(--space-3);
    background-color: var(--color-primary);
    color: white;
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .guide-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    padding: var(--space-6);
    flex: 1;
  }
  
  .guide-meta {
    display: flex;
    align-items: center;
    gap: var(--space-4);
  }
  
  .read-time {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
  }
  
  .guide-title {
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--color-text);
    line-height: 1.3;
    margin: 0;
  }
  
  .guide-description {
    font-size: var(--text-base);
    line-height: 1.6;
    color: var(--color-text-secondary);
    flex: 1;
  }
  
  .guide-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--color-primary);
    text-decoration: none;
    margin-top: auto;
    transition: gap var(--transition-fast);
  }
  
  .guide-link:hover {
    gap: var(--space-3);
    text-decoration: none;
  }
  
  .newsletter-section {
    padding-block: var(--space-20);
    background-color: var(--color-bg-secondary);
  }
  
  .newsletter-card {
    max-width: 700px;
    margin-inline: auto;
    text-align: center;
    padding: var(--space-12);
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-lg);
  }
  
  .newsletter-card h2 {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-4);
  }
  
  .newsletter-card > p {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-8);
    max-width: 50ch;
    margin-inline: auto;
  }
  
  .newsletter-form {
    display: flex;
    gap: var(--space-3);
    max-width: 500px;
    margin-inline: auto;
    margin-bottom: var(--space-4);
  }
  
  .newsletter-input {
    flex: 1;
    padding: var(--space-4) var(--space-5);
    font-size: var(--text-base);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-lg);
    background-color: var(--color-bg);
    color: var(--color-text);
    transition: border-color var(--transition-fast);
  }
  
  .newsletter-input:focus {
    outline: none;
    border-color: var(--color-primary);
  }
  
  .newsletter-disclaimer {
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
    margin: 0;
  }
  
  @media (max-width: 768px) {
    .guides-hero {
      padding-block: var(--space-12) var(--space-10);
    }
    
    .hero-title {
      font-size: var(--text-3xl);
    }
    
    .guides-grid {
      grid-template-columns: 1fr;
    }
    
    .newsletter-form {
      flex-direction: column;
    }
    
    .newsletter-card {
      padding: var(--space-8);
    }
  }
</style>

<script>
  // Simple filter functionality
  document.addEventListener('DOMContentLoaded', () => {
    const filterBtns = document.querySelectorAll('.filter-btn');
    const guideCards = document.querySelectorAll('.guide-card');
    
    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const category = btn.dataset.category;
        
        // Update active state
        filterBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        // Filter cards
        guideCards.forEach(card => {
          if (category === 'all' || card.dataset.category === category) {
            card.style.display = 'flex';
          } else {
            card.style.display = 'none';
          }
        });
      });
    });
  });
</script>