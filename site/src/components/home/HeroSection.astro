---
import { Image } from 'astro:assets';

interface Props {
  formattedDate: string;
}

const { formattedDate } = Astro.props;
---
<div class="hero relative bg-bg-secondary py-20 pb-16 overflow-hidden min-h-[550px] flex items-center">
  <div
    class="hero-visual absolute top-0 right-0 w-1/2 h-full bg-gradient-to-br from-bg-tertiary to-surface"
    style="clip-path: polygon(20% 0, 100% 0, 100% 100%, 0% 100%);"
  >
    <div
      class="hero-image-overlay absolute inset-0 flex items-center justify-end"
      style="background-image: radial-gradient(circle at 20% 30%, rgba(255, 107, 53, 0.08) 0%, transparent 50%), radial-gradient(circle at 80% 70%, rgba(0, 78, 137, 0.08) 0%, transparent 50%);"
    >
      <Image
        src="/images/hero/hero_feature.webp"
        alt="Home gym equipment"
        width={600}
        height={550}
        loading="eager"
        fetchpriority="high"
        format="webp"
        quality={75}
        class="w-full h-full object-cover object-[center_right]"
      />
    </div>
  </div>
  <div class="container">
    <div class="hero-content relative z-[1] max-w-[650px]">
      <div class="hero-label inline-flex items-center gap-2 px-4 py-2 bg-primary/10 rounded-full text-sm font-semibold text-primary mb-8 tracking-wide">
        <span class="hero-label-dot w-2 h-2 bg-primary rounded-full animate-pulse"></span>
        <span>Updated Daily</span>
      </div>
      <h1 class="hero-title text-[clamp(2.5rem,5vw,4rem)] font-extrabold leading-[1.1] tracking-tight text-text mb-6">
        Premium Fitness Equipment.<br />
        <span class="hero-title-accent text-primary block">Unbeatable Prices.</span>
      </h1>
      <p class="hero-description text-xl leading-relaxed text-text-secondary mb-10 max-w-[540px]">
        Curated deals on quality home gym equipment from top brands.
        Verified discounts, updated every 24 hours.
      </p>
      <div class="hero-stats flex items-center gap-6 mb-10">
        <div class="hero-stat text-center">
          <div class="hero-stat-value text-2xl font-extrabold text-text leading-none mb-1">Daily</div>
          <div class="hero-stat-label text-sm text-text-secondary font-medium uppercase tracking-wider">Updates</div>
        </div>
        <div class="hero-stat-divider w-px h-10 bg-border"></div>
        <div class="hero-stat text-center">
          <div class="hero-stat-value text-2xl font-extrabold text-text leading-none mb-1">100%</div>
          <div class="hero-stat-label text-sm text-text-secondary font-medium uppercase tracking-wider">Verified</div>
        </div>
        <div class="hero-stat-divider w-px h-10 bg-border"></div>
        <div class="hero-stat text-center">
          <div class="hero-stat-value text-2xl font-extrabold text-text leading-none mb-1">Top</div>
          <div class="hero-stat-label text-sm text-text-secondary font-medium uppercase tracking-wider">Brands</div>
        </div>
      </div>
      <div class="hero-cta flex items-center gap-6 flex-wrap">
        <a
          href="#deals"
          class="hero-cta-primary inline-flex items-center gap-3 px-8 py-4 bg-primary text-white text-lg font-bold rounded-lg no-underline transition-all duration-base shadow-[0_4px_14px_rgba(255,107,53,0.3)] hover:bg-primary-dark hover:text-white hover:-translate-y-0.5 hover:shadow-[0_6px_20px_rgba(255,107,53,0.4)]"
        >
          View Today's Deals
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            class="transition-transform duration-base group-hover:translate-x-1"
          >
            <path d="M5 12h14M12 5l7 7-7 7" />
          </svg>
        </a>
        <div class="hero-date-badge inline-flex items-center gap-2 px-5 py-3 bg-surface border border-border rounded-lg text-sm font-semibold text-text-secondary">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-primary">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
          </svg>
          <span>{formattedDate}</span>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  @media (max-width: 1024px) {
    .hero {
      @apply min-h-0 py-24 pb-20;
    }

    .hero-visual {
      @apply w-2/5;
      clip-path: polygon(30% 0, 100% 0, 100% 100%, 0% 100%);
    }
  }

  @media (max-width: 768px) {
    .hero {
      @apply py-20 pb-16;
    }

    .hero-visual {
      @apply hidden;
    }

    .hero-content {
      @apply max-w-full;
    }

    .hero-title {
      @apply text-3xl;
    }

    .hero-stats {
      @apply gap-4;
    }

    .hero-stat-divider {
      @apply h-[30px];
    }

    .hero-cta {
      @apply flex-col items-stretch;
    }

    .hero-cta-primary {
      @apply justify-center;
    }
  }

  @media (max-width: 480px) {
    .hero-label {
      @apply text-xs;
    }

    .hero-description {
      @apply text-base;
    }

    .hero-stats {
      @apply justify-between w-full;
    }

    .hero-stat-value {
      @apply text-xl;
    }
  }
</style>
