          </a>
          
          <div class="flex items-center gap-4 px-5 py-3 bg-surface-glass backdrop-blur-glass border border-border rounded-xl">
            <div class="flex -space-x-2">
              <div class="w-8 h-8 rounded-full bg-gradient-to-br from-primary to-accent border-2 border-bg-secondary"></div>
              <div class="w-8 h-8 rounded-full bg-gradient-to-br from-secondary to-info border-2 border-bg-secondary"></div>
              <div class="w-8 h-8 rounded-full bg-gradient-to-br from-accent to-warning border-2 border-bg-secondary"></div>
            </div>
            <div class="text-left">
              <p class="text-sm font-semibold text-text">2,847+ Users</p>
              <p class="text-xs text-text-tertiary">Saving daily</p>
            </div>
          </div>
        </div>
        
        <!-- Trust badges -->
        <div class="flex flex-wrap items-center gap-6 pt-2 animate-fade-in-up" style="animation-delay: 500ms;">
          <div class="flex items-center gap-2.5">
            <div class="w-10 h-10 rounded-xl bg-success/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-success" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <div>
              <p class="text-sm font-semibold text-text">Verified</p>
              <p class="text-xs text-text-tertiary">100% checked</p>
            </div>
          </div>
          
          <div class="flex items-center gap-2.5">
            <div class="w-10 h-10 rounded-xl bg-info/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-info" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
              </svg>
            </div>
            <div>
              <p class="text-sm font-semibold text-text">Private</p>
              <p class="text-xs text-text-tertiary">No tracking</p>
            </div>
          </div>
          
          <div class="flex items-center gap-2.5">
            <div class="w-10 h-10 rounded-xl bg-accent/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z" />
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd" />
              </svg>
            </div>
            <div>
              <p class="text-sm font-semibold text-text">Free</p>
              <p class="text-xs text-text-tertiary">Always</p>
            </div>
          </div>
        </div>
        
      </div>
      
      <!-- Right: Visual Column -->
      <div class="lg:col-span-5 relative">
        <div class="hero-visual-container relative animate-fade-in-up" style="animation-delay: 200ms;">
          
          <!-- Refined card -->
          <div class="relative w-full aspect-square max-w-md mx-auto">
            
            <!-- Background cards for subtle depth -->
            <div class="absolute inset-0 bg-surface-glass backdrop-blur-glass border border-border rounded-3xl transform rotate-3 scale-95 opacity-30"></div>
            <div class="absolute inset-0 bg-surface-glass backdrop-blur-glass border border-border rounded-3xl transform -rotate-2 scale-97 opacity-50"></div>
            
            <!-- Main visual card -->
            <div class="relative bg-gradient-to-br from-surface-elevated to-surface backdrop-blur-strong border border-border-light rounded-3xl p-6 shadow-xl overflow-hidden group">
              
              <!-- Subtle gradient overlay -->
              <div class="absolute inset-0 bg-gradient-mesh opacity-20" style="background-size: 200% 200%;"></div>
              
              <!-- Content -->
              <div class="relative z-10 h-full flex flex-col">
                
                <!-- Top badge -->
                <div class="flex items-center justify-between mb-4">
                  <div class="px-3 py-1.5 bg-primary/10 backdrop-blur-sm border border-primary/20 rounded-full">
                    <span class="text-xs font-bold gradient-text uppercase tracking-wide">Featured</span>
                  </div>
                  <div class="w-10 h-10 rounded-xl bg-success/10 flex items-center justify-center">
                    <svg class="w-5 h-5 text-success" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                  </div>
                </div>
                
                <!-- Image container -->
                <div class="flex-1 flex items-center justify-center mb-4 relative">
                  <div class="absolute inset-0 bg-gradient-to-br from-primary/15 to-secondary/15 rounded-2xl blur-2xl"></div>
                  <Image
                    src="/images/hero/hero_feature.webp"
                    alt="Premium fitness equipment"
                    width={400}
                    height={400}
                    loading="eager"
                    fetchpriority="high"
                    format="webp"
                    quality={90}
                    class="relative z-10 w-full h-full object-contain drop-shadow-xl transform group-hover:scale-105 transition-transform duration-700"
                  />
                </div>
                
                <!-- Bottom info -->
                <div class="space-y-3">
                  <div class="flex items-center justify-between">
                    <div>
                      <p class="text-xs text-text-tertiary font-semibold uppercase tracking-wide mb-0.5">Top Deal</p>
                      <p class="text-xl font-black text-text">Power Rack</p>
                    </div>
                  </div>
                  
                  <div class="flex items-center gap-3">
                    <div class="flex-1 px-3 py-2.5 bg-bg-secondary/50 rounded-xl">
                      <p class="text-xs text-text-tertiary font-bold uppercase tracking-wide mb-0.5">Save</p>
                      <p class="text-2xl font-black gradient-text">45%</p>
                    </div>
                    <div class="flex-1 px-3 py-2.5 bg-bg-secondary/50 rounded-xl">
                      <p class="text-xs text-text-tertiary font-bold uppercase tracking-wide mb-0.5">Price</p>
                      <p class="text-2xl font-black text-text">$899</p>
                    </div>
                  </div>
                  
                  <button class="w-full px-5 py-3 bg-gradient-to-r from-primary to-primary-dark text-white font-bold rounded-xl transition-all duration-smooth hover:shadow-glow hover:scale-105">
                    View Deal →
                  </button>
                </div>
                
              </div>
            </div>
            
            <!-- Subtle floating elements -->
            <div class="absolute -top-4 -right-4 w-16 h-16 bg-gradient-to-br from-accent to-warning rounded-2xl shadow-soft animate-float opacity-60 flex items-center justify-center">
              <span class="text-2xl">🔥</span>
            </div>
            
            <div class="absolute -bottom-4 -left-4 w-14 h-14 bg-gradient-to-br from-secondary to-info rounded-2xl shadow-soft animate-float-slow opacity-60 flex items-center justify-center">
              <span class="text-xl">💪</span>
            </div>
            
          </div>
          
        </div>
      </div>
      
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 animate-bounce">
    <span class="text-xs font-bold text-text-tertiary uppercase tracking-widest">Scroll</span>
    <div class="w-6 h-10 border-2 border-border rounded-full flex items-start justify-center p-2">
      <div class="w-1.5 h-3 bg-primary rounded-full animate-pulse"></div>
    </div>
  </div>
  
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(5deg); }
  }
  
  @keyframes float-slow {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-15px) rotate(-5deg); }
  }
  
  .scale-97 {
    transform: scale(0.97);
  }
  
  /* Magnetic effect for CTA */
  @media (hover: hover) {
    .cta-primary {
      transition: transform 350ms cubic-bezier(0.34, 1.56, 0.64, 1), box-shadow 350ms ease;
    }
  }
</style>

<script>
  // Counter animation
  function animateCounter(element: HTMLElement, target: number, duration: number = 2000) {
    const start = 0;
    const increment = target / (duration / 16);
    let current = start;
    
    const timer = setInterval(() => {
      current += increment;
      if (current >= target) {
        element.textContent = target.toString();
        clearInterval(timer);
      } else {
        element.textContent = Math.floor(current).toString();
      }
    }, 16);
  }
  
  // Intersection Observer for animations
  const observerOptions = {
    threshold: 0.3,
    rootMargin: '0px'
  };
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const counters = entry.target.querySelectorAll('[data-count]');
        counters.forEach((counter) => {
          const target = parseInt((counter as HTMLElement).dataset.count || '0');
          animateCounter(counter as HTMLElement, target, 1500);
        });
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);
  
  const statsSection = document.querySelector('.hero-layout');
  if (statsSection) {
    observer.observe(statsSection);
  }
  
  // Magnetic button effect
  if (window.matchMedia('(hover: hover)').matches) {
    const ctaButton = document.querySelector('.cta-primary');
    
    if (ctaButton) {
      ctaButton.addEventListener('mousemove', (e: Event) => {
        const mouseEvent = e as MouseEvent;
        const rect = (ctaButton as HTMLElement).getBoundingClientRect();
        const x = mouseEvent.clientX - rect.left;
        const y = mouseEvent.clientY - rect.top;
        
        const centerX = rect.width / 2;
        const centerY = rect.height / 2;
        
        const deltaX = (x - centerX) / centerX;
        const deltaY = (y - centerY) / centerY;
        
        (ctaButton as HTMLElement).style.transform = `scale(1.05) translate(${deltaX * 8}px, ${deltaY * 8}px)`;
      });
      
      ctaButton.addEventListener('mouseleave', () => {
        (ctaButton as HTMLElement).style.transform = '';
      });
    }
  }
</script>
