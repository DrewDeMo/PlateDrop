---
import { Image } from 'astro:assets';

interface Props {
  formattedDate: string;
}

const { formattedDate } = Astro.props;
---

<section class="hero-2026 relative overflow-hidden pt-28 md:pt-36" id="hero">
  <!-- Subtle background -->
  <div class="hero-grid absolute inset-0 opacity-[0.015]">
    <div class="absolute inset-0" style="background-image: linear-gradient(rgba(255, 107, 53, 0.2) 1px, transparent 1px), linear-gradient(90deg, rgba(255, 107, 53, 0.2) 1px, transparent 1px); background-size: 60px 60px;"></div>
  </div>
  
  <!-- Refined orb system -->
  <div class="hero-orbs absolute inset-0 overflow-hidden pointer-events-none">
    <div class="orb orb-1 absolute w-[500px] h-[500px] rounded-full blur-[100px] opacity-12 bg-gradient-to-br from-primary to-accent animate-float" style="top: 5%; right: 0%;"></div>
    <div class="orb orb-2 absolute w-[400px] h-[400px] rounded-full blur-[90px] opacity-10 bg-gradient-to-br from-secondary to-info animate-float-slow" style="bottom: -10%; left: -5%;"></div>
  </div>
  
  <div class="container relative z-10">
    <!-- Balanced asymmetric layout -->
    <div class="hero-layout grid lg:grid-cols-12 gap-12 lg:gap-20 min-h-[75vh] items-center py-16 lg:py-20">
      
      <!-- Left: Content Column -->
      <div class="lg:col-span-7 space-y-8">
        
        <!-- Floating status badge -->
        <div class="inline-flex items-center gap-3 px-5 py-2.5 bg-surface-glass backdrop-blur-strong border border-border rounded-full shadow-soft animate-fade-in-up" style="animation-delay: 0ms;">
          <div class="relative">
            <div class="absolute inset-0 bg-primary rounded-full animate-ping opacity-75"></div>
            <div class="relative w-2.5 h-2.5 bg-primary rounded-full shadow-glow"></div>
          </div>
          <span class="text-sm font-bold">
            <span class="gradient-text">Live</span>
            <span class="text-text-tertiary mx-2">•</span>
            <span class="text-text-secondary">{formattedDate}</span>
          </span>
        </div>
        
        <!-- Refined headline -->
        <div class="space-y-3 animate-fade-in-up" style="animation-delay: 100ms;">
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-black leading-[1.05] tracking-tight">
            <span class="block text-text mb-1">Premium Fitness</span>
            <span class="block text-text mb-1">Equipment.</span>
            <span class="block gradient-text">Unbeatable Prices.</span>
          </h1>
        </div>
        
        <!-- Cleaner description -->
        <p class="text-xl md:text-2xl leading-relaxed text-text-secondary max-w-2xl animate-fade-in-up" style="animation-delay: 200ms;">
          Discover <span class="text-text font-semibold">hand-curated deals</span> on premium home gym equipment from top brands.
          <span class="block mt-2 text-lg text-text-tertiary">Verified daily • Always authentic • Never spam</span>
        </p>
        
        <!-- Refined stats grid -->
        <div class="grid grid-cols-3 gap-4 py-6 animate-fade-in-up" style="animation-delay: 300ms;">
          <div class="stat-card group relative p-5 bg-surface-glass backdrop-blur-glass border border-border rounded-2xl transition-all duration-smooth hover:border-primary hover:shadow-soft hover:-translate-y-1">
            <div class="absolute inset-0 bg-gradient-to-br from-primary/3 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-smooth"></div>
            <div class="relative">
              <div class="flex items-baseline gap-1.5 mb-1.5">
                <span class="text-4xl font-black gradient-text" data-count="24">0</span>
                <span class="text-xl font-bold text-primary">h</span>
              </div>
              <p class="text-xs font-bold text-text-tertiary uppercase tracking-wider">Refresh</p>
            </div>
          </div>
          
          <div class="stat-card group relative p-5 bg-surface-glass backdrop-blur-glass border border-border rounded-2xl transition-all duration-smooth hover:border-primary hover:shadow-soft hover:-translate-y-1">
            <div class="absolute inset-0 bg-gradient-to-br from-primary/3 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-smooth"></div>
            <div class="relative">
              <div class="flex items-baseline gap-1.5 mb-1.5">
                <span class="text-4xl font-black gradient-text" data-count="100">0</span>
                <span class="text-xl font-bold text-primary">%</span>
              </div>
              <p class="text-xs font-bold text-text-tertiary uppercase tracking-wider">Verified</p>
            </div>
          </div>
          
          <div class="stat-card group relative p-5 bg-surface-glass backdrop-blur-glass border border-border rounded-2xl transition-all duration-smooth hover:border-primary hover:shadow-soft hover:-translate-y-1">
            <div class="absolute inset-0 bg-gradient-to-br from-primary/3 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-smooth"></div>
            <div class="relative">
              <div class="mb-1.5">
                <span class="text-4xl font-black gradient-text">Top</span>
              </div>
              <p class="text-xs font-bold text-text-tertiary uppercase tracking-wider">Brands</p>
            </div>
          </div>
        </div>
        
        <!-- Refined CTA section -->
        <div class="flex flex-col sm:flex-row items-start sm:items-center gap-4 animate-fade-in-up" style="animation-delay: 400ms;">
          <a href="#deals" class="cta-primary group relative inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-primary to-primary-dark text-white text-lg font-bold rounded-2xl no-underline overflow-hidden shadow-glow transition-all duration-smooth hover:shadow-glow hover:scale-105 hover:text-white">
            <span class="relative z-10">View Today's Deals</span>
            <svg class="relative z-10 w-5 h-5 transition-transform duration-smooth group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
